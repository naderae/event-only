<h1>New Location</h1>

<%= link_to 'Show all locations', locations_path %>

<%= form_for location do |f| %>
  <p>
    <%= f.label :name %>  <!-- the label is the same title as title of the params hash -->
    <%= f.text_field :name %> <!-- says your storing  this text field in the :name column in the params hash-->
  </p>

  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :image %>
    <%= f.text_field :image %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
